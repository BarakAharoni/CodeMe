<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Create Job Offer</title>
    <link rel="icon" href="/icon.jpg">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet">
    <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/jobOffer.css">
</head>
<body>
<div class="jumbotron" id="header">
    <div class="container text-center">
        <h1>CodeMe;</h1>
        <p>Connect Between People to Code</p>
    </div>
</div>

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-9">
                <h1 class="mb-4" id="titleReg">Update Job Offer</h1>

                <div class="card" style="border-radius: 15px;">
                    <div class="card-body">

                        <div class="row align-items-center pt-4 pb-3">
                            <div class="col-md-3 ps-5">
                                <h6 class="mb-0">Title</h6>
                            </div>
                            <div class="col-md-9 pe-5">
                                <span class="span" id="titleSpan" style="font-size: x-large;"><strong><span class="text" id="titleText"><%=job.title%></span><span>&ensp;&ensp;</span></strong> <span class="icon" id="titleIcon"><i class="bi bi-pencil-fill"></i></span></span>
                                <input value="<%=job.title%>" class="form-control form-control-lg input" id="titleInput"/>
                            </div>
                        </div>

                        <hr class="mx-n3">

                        <div class="row align-items-center py-3">
                            <div class="col-md-3 ps-5">
                                <h6 class="mb-0">User Name</h6>
                            </div>
                            <div class="col-md-9 pe-5">
                                <span class="span" id="usernameSpan" style="font-size: x-large;"><strong><span class="text" id="usernameText"><%=job.username%></span><span>&ensp;&ensp;</span></strong> <span class="icon" id="usernameIcon"><i class="bi bi-pencil-fill"></i></span></span>
                                <input value="<%=job.username%>" class="form-control form-control-lg input" id="usernameInput"/>
                            </div>
                        </div>

                        <hr class="mx-n3">
                        <div class="row align-items-center py-3">
                            <div class="col-md-3 ps-5">
                                <h6 class="mb-0">Password</h6>
                            </div>
                            <div class="col-md-9 pe-5">
                                <span class="span" id="passwordSpan" style="font-size: x-large;"><strong><span class="text" id="passwordText"> Edit</span><span>&ensp;&ensp;</span></strong> <span class="icon" id="passwordIcon"><i class="bi bi-pencil-fill"></i></span></span>
                                <div id="passwordDiv">
                                    <label for="fname">Current password:</label>
                                    <%if(type === "admin") {%>
                                        <input type="text" class="form-control form-control-lg" id="passwordCurrent" value="<%=job.password%>"/>
                                    <%} else {%>
                                        <input type="password" class="form-control form-control-lg" id="passwordCurrent"/>
                                    <%}%>
                                    <label for="fname">New password:</label>
                                    <input type="password" class="form-control form-control-lg" id="passwordNew"/>
                                    <br>
                                    <label for="fname" id="errorPassword"></label>
                                    <div class="container text-center">
                                        <div class="row">
                                            <div class="col">
                                                <input type="submit" class="form-control form-control-lg" id="passwordUpdate" value="check valid"/>
                                            </div>
                                            <div class="col">
                                                <input type="submit" class="form-control form-control-lg" id="passwordCancel" value="Cancel"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="mx-n3">

                        <div class="row align-items-center py-3">
                            <div class="col-md-3 ps-5">
                                <h6 class="mb-0">Description</h6>
                            </div>
                            <div class="col-md-9 pe-5">
                                <span class="span" id="descriptionSpan" style="font-size: x-large;"><strong><span class="text" id="descriptionText"><%=job.description%></span><span>&ensp;&ensp;</span></strong> <span class="icon" id="descriptionIcon"><i class="bi bi-pencil-fill"></i></span></span>
                                <input value="<%=job.description%>" class="form-control form-control-lg input" id="descriptionInput"/>
                            </div>
                        </div>

                        <hr class="mx-n3">

                        <div class="row align-items-center pt-4 pb-3">
                            <div class="col-md-3 ps-5">
                                <h6 class="mb-0">Salary</h6>
                            </div>
                            <div class="col-md-9 pe-5">
                                <div class="form-outline" style="width: 22rem;">
                                    <span class="span" id="salarySpan" style="font-size: x-large;"><strong><span class="text" id="salaryText"><%=job.salary%>$</span><span>&ensp;&ensp;</span></strong> <span class="icon" id="salaryIcon"><i class="bi bi-pencil-fill"></i></span></span>
                                    <input type="number" value="<%=job.salary%>" class="form-control form-control-lg input" id="salaryInput"/>
                                </div>
                            </div>
                        </div>

                        <hr class="mx-n3">

                        <div class="px-5 py-4">
                            <button type="submit" id="submit" class="btn btn-primary btn-lg">Update</button>
                            <button type="submit" id="cancel" class="btn btn-primary btn-lg">Cancel</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/jobOfferUpdate.js"></script>
<script>
    function getType(){
        return "<%=type%>";
    }
    const icons = $(".icon");
    const spans = $(".span");
    const texts = document.getElementsByClassName("Text")
    const inputs = $(".input");

    icons.each(function () {$(this).hide()})
    inputs.each(function () {$(this).hide()})
    spans.each(function () {$(this).mouseenter(function () {
        let val1 = ($(this).attr("id")).replace("Span","");
        if (!(this).hidden) {
            $("#" + val1 + "Icon").show();
        }
    })});
    spans.each(function () {$(this).mouseleave(function () {
        let val1 = ($(this).attr("id")).replace("Span","");
        $("#" + val1 + "Icon").hide()
    })});
    icons.each(function () {$(this).click(function () {
        let val1 = ($(this).attr("id")).replace("Icon","");
        $("#" + val1 + "Span").hide();
        $("#" + val1 + "Input").show().focus();
        $(this).hide()
    })});
    inputs.each(function () {$(this).blur(function () {
        let val1 = ($(this).attr("id")).replace("Input","");
        let val2 = $("#" + val1 + "Input")
        $("#" + val1 + "Span").show();
        val2.hide();
        document.getElementById(val1 + "Text").innerHTML = val2[0].value;
        if(String(val1).includes("salary")){
            document.getElementById(val1 + "Text").innerHTML = val2[0].value + "$";
        }
    })});

    function checkValidPassword(currentPas,newPas){
        if(currentPas === "" && newPas === ""){return  true;}
        if(currentPas !== "<%=job.password%>"){return false;}
        else if (currentPas === newPas){return false;}
        else if (newPas === "" && currentPas !== ""){return false;}
        return true;
    }

    function getCurrentPassword(){
        return '<%=job.password%>'
    }

    const passwordDiv = $("#passwordDiv");
    const passwordCurrent = $("#passwordCurrent");
    const passwordNew = $("#passwordNew");
    const passwordUpdate = $("#passwordUpdate");
    const passwordIcon = $("#passwordIcon");
    const passwordSpan = $("#passwordSpan");
    const passwordCancel = $("#passwordCancel");
    const passwordError = $("#errorPassword");
    passwordDiv.hide();
    passwordError.hide();
    passwordIcon.click(function () {
        passwordSpan.hide();
        passwordDiv.show();
    })
    passwordCancel.click(function (){
        passwordSpan.show();
        passwordDiv.hide();
        document.getElementById("passwordCurrent").value = "";
        document.getElementById("passwordNew").value = "";
        passwordError.hide();
    })
    passwordUpdate.click(function (){
        if(String(passwordCurrent[0].value) !== String(getCurrentPassword())){
            document.getElementById("errorPassword").innerHTML = "The current password is incorrect";
            document.getElementById("errorPassword").style.color = "#FF0000";
            passwordError.show();
        }
        else if (passwordCurrent[0].value === passwordNew[0].value ){
            document.getElementById("errorPassword").innerHTML = "The new password cannot match the previous password";
            document.getElementById("errorPassword").style.color = "#FF0000";
            passwordError.show();
        }
        else if (passwordNew[0].value === ""){
            document.getElementById("errorPassword").innerHTML = "You must put a new password";
            document.getElementById("errorPassword").style.color = "#FF0000";
            passwordError.show();
        }
        else {
            document.getElementById("errorPassword").innerHTML = "The new password is valid press the update to update the password";
            document.getElementById("errorPassword").style.color = "#4F7942";
            passwordError.show();
        }
    })
</script>
</body>

</html>