                                </select>

                            </div>
                        </div>

                        <hr class="mx-n3">

                        <div class="row align-items-center py-3">
                            <div class="col-md-3 ps-5">

                                <h6 class="mb-0">Github Account</h6>

                            </div>
                            <div class="col-md-9 pe-5">
                                <span class="span" id="githubSpan" style="font-size: x-large;"><strong><span class="text" id="githubText"><%=dev.github%></span><span>&ensp;&ensp;</span></strong> <span class="icon" id="githubIcon"><i class="bi bi-pencil-fill"></i></span></span>
                                <input value="<%=dev.github%>" class="form-control form-control-lg input" id="githubInput"/>

                            </div>
                        </div>

                        <hr class="mx-n3">

                        <div class="row align-items-center py-3">
                            <div class="col-md-3 ps-5">

                                <h6 class="mb-0">City of Living</h6>

                            </div>
                            <div class="col-md-9 pe-5">

                                <!-- <input type="text" class="form-control form-control-lg" id="city"/> -->
                                <datalist id="cityList">
                                    <%for (var i=0; i < cities.length; i++) {%>
                                    <option><%=cities[i].שם_ישוב%></option>
                                    <%}%>
                                </datalist>
                                <span class="span" id="citySpan" style="font-size: x-large;"><strong><span class="text" id="cityText"><%=dev.city%></span><span>&ensp;&ensp;</span></strong> <span class="icon" id="cityIcon"><i class="bi bi-pencil-fill"></i></span></span>
