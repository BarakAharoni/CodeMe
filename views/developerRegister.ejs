<!DOCTYPE html>
<html lang="en">
    <head>

        <title>Registration</title>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <meta charset="utf-8">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet">
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="/developerRegister.css">
    </head>
    <body>
        <div class="jumbotron" id="header">
            <div class="container text-center">
                <h1>CodeMe;</h1>
                <p>Connect Between People to Code</p>
            </div>
        </div>

        <section class="vh-100" style="background-color: #eee;">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-xl-9">
                        <h1 class="mb-4">Be One of Our Developers</h1>

                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body">

                                <div class="row align-items-center pt-4 pb-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">Full name</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <input type="text" class="form-control form-control-lg" id="name"/>

                                    </div>
                                </div>

                                <hr class="mx-n3">

                                <div class="row align-items-center py-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">User Name</h6>
                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <input type="text" class="form-control form-control-lg" id="username"/>
                                        <label id="userLabel">Username is Already Taken!</label>
                                    </div>
                                </div>

                                <hr class="mx-n3">

                                <div class="row align-items-center py-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">Password</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <input type="password" class="form-control form-control-lg" id="password"/>

                                    </div>
                                </div>

                                <hr class="mx-n3">
                                <div class="row align-items-center pt-4 pb-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">Program languages</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">
                                        <input type="text" class="form-control form-control-lg" id="sumLangs"/>
                                        <br>
                                        <select class="form-select" id="langs" multiple="multiple">
                                            <option>Ada</option>
                                            <option>ActionScript</option>
                                            <option>Arduino</option>
                                            <option>Assembly</option>
                                            <option>Awk</option>
                                            <option>BASIC</option>
                                            <option>C</option>
                                            <option>C++</option>
                                            <option>C#</option>
                                            <option>Clojure</option>
                                            <option>Cobol</option>
                                            <option>CoffeeScript</option>
                                            <option>Dart</option>
                                            <option>Delphi/Object Pascal</option>
                                            <option>Elixir</option>
                                            <option>Erlang</option>
                                            <option>F#</option>
                                            <option>Fortran</option>
                                            <option>Go</option>
                                            <option>Groovy</option>
                                            <option>Haskell</option>
                                            <option>Java</option>
                                            <option>JavaScript</option>
                                            <option>Julia</option>
                                            <option>Kotlin</option>
                                            <option>LabVIEW</option>
                                            <option>Lisp</option>
                                            <option>Lua</option>
                                            <option>MATLAB</option>
                                            <option>Objective-C</option>
                                            <option>Perl</option>
                                            <option>PHP</option>
                                            <option>Prolog</option>
                                            <option>Python</option>
                                            <option>R</option>
                                            <option>Ruby</option>
                                            <option>Rust</option>
                                            <option>Scala</option>
                                            <option>Scheme</option>
                                            <option>Scratch</option>
                                            <option>Shell</option>
                                            <option>Smalltalk</option>
                                            <option>SQL</option>
                                            <option>Swift</option>
                                            <option>Tcl</option>
                                            <option>TypeScript</option>
                                            <option>Verilog</option>
                                            <option>VHDL</option>
                                            <option>Visual Basic .NET</option>
                                            <option>Logo</option>
                                        </select>

                                    </div>
                                </div>

                                <hr class="mx-n3">

                                <div class="row align-items-center py-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">Github Account</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <input type="text" class="form-control form-control-lg" id="github"/>

                                    </div>
                                </div>

                                <hr class="mx-n3">

                                <div class="row align-items-center py-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">City of Living</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <!-- <input type="text" class="form-control form-control-lg" id="city"/> -->
                                        <datalist id="cityList">
                                            <%for (var i=0; i < cities.length; i++) {%>
                                                <option><%=cities[i].שם_ישוב%></option>
                                            <%}%>
                                        </datalist>
                                        <input type="text" class="form-control form-control-lg" name="automaker" list="cityList" id="city"/>

                                    </div>
                                </div>

                                <hr class="mx-n3">

                                <div class="row align-items-center py-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">Upload Profile Picture</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        <input class="form-control form-control-lg" id="formFileLg" type="file"/>
                                        <div class="small text-muted mt-2">* Not Mandatory</div>

                                    </div>
                                </div>

                                <hr class="mx-n3">

                                <div class="px-5 py-4">
                                    <button type="submit" id="submit" class="btn btn-primary btn-lg">Register</button>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <img id="defaultImg" src='/images/basicDev.png'>

        </section>
        <script src="/developerRegister.js"></script>
        <script>
            var users = [];
            var typingTimer;
            var doneTypingInterval = 5000;
            var uniqUser = true;
            var usernameObj = document.getElementById("username");
            var userLabel = document.getElementById("userLabel");
            var $input = $('#username');
            "<% for (var i = 0; i < developers.length; i++) { %>"
            users.push("<%=developers[i].username%>");
            "<%}%>"
            //on keyup, start the countdown
            $input.on('keyup', function () {
                uniqUser = true;
                for (var i = 0; i < users.length; i++) {
                    if (users[i] == usernameObj.value) {
                        usernameObj.style.borderColor = "#dc143c";
                        usernameObj.style.borderWidth = "thick";
                        userLabel.style.display = "inline";
                        uniqUser = false;
                        document
                            .getElementById("submit")
                            .disabled = true;
                    }
                }
                if (uniqUser == true) {
                    usernameObj.style.borderColor = "#ced4da";
                    usernameObj.style.borderWidth = "1px";
                    userLabel.style.display = "none";
                    document
                        .getElementById("submit")
                        .disabled = false;
                }
            });
        </script>
    </body>

</html>