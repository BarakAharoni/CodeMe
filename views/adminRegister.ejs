<!DOCTYPE html>
<html lang="en">
<head>

    <title>Registration</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <meta charset="utf-8">
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet">
    <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/developerRegister.css">
</head>
<body>
<div class="jumbotron" id="header">
    <div class="container text-center">
        <h1>CodeMe;</h1>
        <p>Connect Between People to Code</p>
    </div>
</div>

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-9">
                <h1 class="mb-4">Be One of Our Admins</h1>

                <div class="card" style="border-radius: 15px;">
                    <div class="card-body">

                        <div class="row align-items-center py-3">
                            <div class="col-md-3 ps-5">

                                <h6 class="mb-0">User Name</h6>
                            </div>
                            <div class="col-md-9 pe-5">

                                <input type="text" class="form-control form-control-lg" id="username"/>
                                <label id="userLabel">Username is Already Taken!</label>
                            </div>
                        </div>

                        <hr class="mx-n3">

                        <div class="row align-items-center py-3">
                            <div class="col-md-3 ps-5">

                                <h6 class="mb-0">Password</h6>

                            </div>
                            <div class="col-md-9 pe-5">

                                <input type="password" class="form-control form-control-lg" id="password"/>

                            </div>
                        </div>

                        <hr class="mx-n3">

                        <div class="row align-items-center py-3">
                            <div class="col-md-3 ps-5">

                                <h6 class="mb-0">Upload Profile Picture</h6>

                            </div>
                            <div class="col-md-9 pe-5">

                                <input class="form-control form-control-lg" id="formFileLg" type="file"/>
                                <div class="small text-muted mt-2">* Not Mandatory</div>

                            </div>
                        </div>

                        <hr class="mx-n3">

                        <div class="px-5 py-4">
                            <button type="submit" id="submit" class="btn btn-primary btn-lg">Register</button>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
    <img id="defaultImg" src='/adminPic.png'>

</section>
<script src="/adminRegister.js"></script>
<script>
    const users = [];
    let typingTimer;
    const doneTypingInterval = 5000;
    let uniqUser = true;
    const usernameObj = document.getElementById("username");
    const userLabel = document.getElementById("userLabel");
    const $input = $('#username');
    "<% for (var i = 0; i < admins.length; i++) { %>"
    users.push("<%=admins[i].username%>");
    "<%}%>"
    //on keyup, start the countdown
    $input.on('keyup', function () {
        uniqUser = true;
        for (var i = 0; i < users.length; i++) {
            if (users[i] === usernameObj.value) {
                usernameObj.style.borderColor = "#dc143c";
                usernameObj.style.borderWidth = "thick";
                userLabel.style.display = "inline";
                uniqUser = false;
                document
                    .getElementById("submit")
                    .disabled = true;
            }
        }
        if (uniqUser == true) {
            usernameObj.style.borderColor = "#ced4da";
            usernameObj.style.borderWidth = "1px";
            userLabel.style.display = "none";
            document
                .getElementById("submit")
                .disabled = false;
        }
    });
</script>
</body>

</html>